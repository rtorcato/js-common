  },
  "homepage": "https://github.com/rtorcato/js-common#readme",
  "sideEffects": false,
  "scripts": {
    "build-dev": "rimraf ./dist && cross-env NODE_ENV=development node build.mjs && tsc --emitDeclarationOnly --project tsconfig.build.json && npm run build-cli",
    "build-prod": "rimraf ./dist && cross-env NODE_ENV=production node build.mjs && tsc --emitDeclarationOnly --project tsconfig.build.json && npm run build-cli",
    "build-cli": "esbuild src/cli/index.ts --bundle --platform=node --format=cjs --outfile=dist/cli/index.cjs.tmp && echo '#!/usr/bin/env node' > dist/cli/index.cjs && cat dist/cli/index.cjs.tmp >> dist/cli/index.cjs && rm dist/cli/index.cjs.tmp && chmod +x dist/cli/index.cjs",
    "prepublishOnly1": "npm run build-prod",
    "==================== Common ====================": "",
    "lint": "pnpm exec biome lint .",
    "format": "pnpm exec biome format .",
    "check:fix": "pnpm exec biome check --fix",
    "check": "pnpm exec biome check .",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "commit": "cz",
    "================================================": ""
  },
  "files": [
    "CHANGELOG.md",
    "CONTRIBUTORS.md",
    "dist",
    "LICENSE",
    "README.md"
  ],
