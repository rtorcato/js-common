  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "js-common": "dist/cli/index.cjs"
  },
  "license": "MIT",
  "keywords": [
    "common",
    "typescript",
    "javascript"
