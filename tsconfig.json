{
  "extends": "@rtorcato/js-tooling/typescript/base",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "rootDir": "./src",
    "paths": {
      "~/*": ["./src/*"]
    },
  },
  "include": ["src/**/*", "src/tests/**/*"],
  "exclude": [
    "build.mjs",
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "release.config.ts"
  ]
}
